@article{Cai2015a,
  author        = {Cai, Y.-F. and Wilson-Ewing, E.},
  title         = {A {$\Lambda$}CDM bounce scenario},
  journal       = {J. Cosmol. Astropart. Phys.},
  year          = {2015},
  volume        = {3},
